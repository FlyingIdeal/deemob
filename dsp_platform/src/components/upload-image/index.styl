.upload-middle
	text-align: left
	.upload-item
		display: inline-block
		margin-right: 10px
		vertical-align: top
		margin-bottom: 10px
	.upload-image
		background: #FAFAFA
		border-radius: 8px
		border: 1px dashed #F0F0F0
		overflow: hidden
		&:hover
			border-color #465CFE
		.logo-upload
			width 200px
			height 200px
			background: #FAFAFA
			display: flex
			align-items: center
			justify-content: center
			cursor: pointer
			flex-direction: column
			color #999999
			border-radius: 8px
		.logo-image
			height: 200px
			width: 200px
			align-items: center
			text-align center
			border-radius: 3px
			position: relative
			display: block

			> img, > video
				max-height: 100%
				max-width: 100%
				vertical-align middle

			&:hover
				color: #ccc
				.cover
					display: inline-block
				.cover.is-edit
					.left
						width: 100%
					.right
						display: none
				.cover.cover-isupload
					display: block

			.cover
				height: 200px
				width: 200px
				background-color: rgba(0, 0, 0, 0.5)
				position: absolute
				left: 0
				top: 0
				display: none
				color: #fff
				.cover_content
					width 100%
					height 100%
					text-align center
					display flex
					justify-content space-between

				.left
					width 50%
					height 100%
					line-height initial
					position relative
					&:hover
						background #465CFE

					.icon
						color #FFFFff
						font-size 25px
				.right 
					width 50%
					height 100%
					position relative
					line-height initial
					&:hover
						background #465CFE
					.icon
						color #FFFFff
						font-size 30px
				.tipContent
					position: absolute
					top: 50%
					left: 50%
					transform: translate(-50%,-50%)
					cursor pointer
					p
						color #ffffff
						margin-top 10px
	h6.file-name
		height: 30px
		line-height: 30px
		overflow: hidden
		text-overflow: ellipsis
		white-space: nowrap