.scene-card
  width 340px
  margin-right 10px
  .scene-child
    cursor: pointer
    display: inline-block
    width: 340px
    height: 70px;
    border-bottom: 1px solid #EFEFEF
    border-right: 1px solid #EFEFEF
    border-left: 1px solid #EFEFEF
    position: relative
    &:hover
      background-color: #F2F4FF
    &:nth-child(1), &:nth-child(2), &:nth-child(3)
      border-top: 1px solid #EFEFEF
    &.active
      background-color: #F2F4FF
      border-bottom: 1px solid #465CFE
      border-right: 1px solid #465CFE
      h4
        font-weight:bold
      &:after
        content:''
        position: absolute
        left: -1px
        top: 0px
        width: 0px
        height: 100%
        border-right: 1px solid #465CFE
      &:before
        content:''
        position: absolute
        left: 0px
        top: -1px
        width: 100%
        height: 0px
        border-bottom: 1px solid #465CFE
    .scene-icon
      display: inline-block
      width: 35px
      margin-left 15px
      vertical-align: middle
      text-align: center
      line-height 70px
      img
        vertical-align: middle
        height 40px
    .scene-intro
      margin-left: 10px
      display: inline-block
      vertical-align: middle
    h4
      font-weight: normal
      height: 20px
      font-size: 12px
      color #333333
      line-height: 20px
      margin-top 4px
    p
      margin-top: 4px
      font-size: 12px
      font-weight: 400
      max-width 250px
      white-space:nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      color: #8E9197
      line-height: 18px
  .scene-card-disabled
    .scene-child
      cursor: no-drop
.style-child
  cursor: pointer
  display: inline-block
  width: 133px
  font-size: 0px
  height 84px
  border-bottom: 1px solid #EFEFEF
  border-right: 1px solid #EFEFEF
  border-left: 1px solid #EFEFEF
  position: relative
  text-align: center
  &.active
    background-color: #F2F4FF
    border-bottom: 1px solid #465CFE
    border-right: 1px solid #3F83F7
    h4
      font-weight:bold
    &:after
      content:''
      position: absolute
      left: -1px
      top: 0px
      width: 0px
      height: 100%
      border-right: 1px solid #3F83F7
    &:before
      content:''
      position: absolute
      left: 0px
      top: -1px
      width: 100%
      height: 0px
      border-bottom: 1px solid #3F83F7
  &:hover
    background-color: #F2F4FF
    h4
      font-weight: bold
  &:nth-child(3n + 1)
    border-left: 1px solid #EFEFEF
  &:nth-child(1), &:nth-child(2), &:nth-child(3), &:nth-child(4)
    border-top: 1px solid #EFEFEF
  .style-icon
    text-align: center
    height: 40px
    margin:5px auto 5px
    img
      max-height: 100%
      vertical-align: middle
      max-width:100%
  .style-intro
    margin-top: 4px
  h4
    font-weight: normal
    height: 20px
    font-size: 12px
    line-height: 20px
  p
    margin-top: 4px
    font-size: 12px
    font-weight: 400
    color: #999999
    height: 18px
    line-height: 18px
    overflow: hidden
