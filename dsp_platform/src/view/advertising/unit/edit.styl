.edit-content-card {
  .appDetail {
    .unitContent {
      border-bottom 1px solid #EBEBEB
      margin-bottom 15px
      &:last-child{
        margin-bottom: 0px
      }
      .xuan{
        width: 60px;
        height: 32px;
        background: #F2F4FF;
        border-radius: 4px;
        border 0px
        color: #333333
      }
      .xuan_a{
        color: #465CFE
        font-weight 500
        font-size 14px
        margin-left 26px
      }
      .title-line-tag {
        color #333333
        font-size 16px
        margin-bottom 10px
        font-weight bold
      }
      .assignTime{
        display flex
        justify-content space-between
        margin-top 10px
        .time_select{
          width 375px
          background: #FFFFFF;
          border: 1px solid #EBEBEB;
          border-radius: 4px;
          .header{
            display flex
            justify-content space-between
            padding  0 10px
            height 32px
            line-height 32px
            background: #FAFAFA;
            border-radius: 4px 4px 0px 0px;
          }
          .time_content{
            max-height 280px
            overflow auto
            .time_list{
              display flex
              background: #F5F5F5;
              border-radius: 4px;
              line-height 25px
              margin  10px
              padding 4px
              .time_title{
                display inline-block
                width 55px
                color #999999
                margin-left 10px
              }
              .time_data{
                display inline-block
                width 360px
              }
            }
            .no_data{
              text-align center
              .icon{
                font-size 60px
                color #EBEBEB
                margin-top 80px
              }
              p{
                color:#999999
                font-size 14px
              }

            }
          }
        }
      }
      .unitForm {
        .formInput {
          width 600px
        }
      }

      /deep/ .ivu-form-item {
        .ivu-input {
          background #ffffff
        }
        .ivu-checkbox-wrapper-checked.ivu-checkbox-border{
          background: #F2F4FF;
          border: 1px solid #465CFE;
          color #465CFE
          box-shadow none
        }
        .ivu-input-group-prepend {
          background #ffffff
        }

        .ivu-radio-group-button .ivu-radio-wrapper {
          background: #FAFAFA;
        }

        .ivu-radio-group-button .ivu-radio-wrapper-checked {
          background: #F2F4FF;
          border: 1px solid #465CFE;
          color #465CFE
          box-shadow none
        }

        .ivu-radio-group-button .ivu-radio-wrapper-checked:before {
          background transparent;
          left 0px
        }
      }
    }
  }

}

