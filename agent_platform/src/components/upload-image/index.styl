.upload-image{
  width 200px
  height 200px
  background: #FAFAFA;
  border: 1px dashed #F0F0F0;
  border-radius: 8px;
  .logo-upload {
    width 200px
    height 200px
    background: #FAFAFA;
    border: 1px dashed #DDDDDD;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    flex-direction: column;
    color #999999
    border-radius: 4px;
    &:hover{
      border-color #465CFE
    }
  }
  .logo-image {
    height: 200px;
    width: 200px;
    margin 3px
    align-items: center;
    text-align center;
    border-radius: 4px;
    display: inline-block;
    position: relative;

    > img {
      max-height: 100%;
      max-width: 100%;
      vertical-align middle
    }

    &:hover {
      color: #ccc;
      .cover {
        display: inline-block;
      }
      .cover.is-edit {
        .left {
          width: 100%
        }
        .right {
          display: none;
        }
      }
    }

    .cover {
      height: 200px;
      width: 200px;
      background-color: rgba(0, 0, 0, 0.5);
      position: absolute;
      left: 0;
      top: 0;
      display: none;
      color: #fff;
      border-radius 4px

      .cover_content {
        width 100%
        height 100%
        text-align center
        display flex
        justify-content space-between
      }

      .left {
        width 50%
        height 100%
        line-height initial
        position relative
        &:hover{
            background #465CFE
            border-radius 4px 0px  0px 4px
        }

        .icon {
          color #FFFFff
          font-size 25px
        }
      }
      .right {
        width 50%
        height 100%
        position relative
        line-height initial
        &:hover{
            background #465CFE
            border-radius 0px 4px  4px 0px
        }
        .icon {
          color #FFFFff
          font-size 30px
        }

      }
      .tipContent{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        cursor pointer
        p{
          color #ffffff
          margin-top 10px
        }
      }
    }
  }
}

